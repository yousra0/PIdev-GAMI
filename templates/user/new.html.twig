{% block form %}
                      {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}

                          {{ form_row(form.nom,{'attr': {'class': 'form-control mb-3'}}) }}
                          {{ form_row(form.prenom,{'attr': {'class': 'form-control mb-3'}})}}
                      
                          {{ form_row(form.MDP,{'attr': {'class': 'form-control mb-3'}}) }}
                           {{ form_row(form.email,{'attr': {'class': 'form-control mb-3'}})}}
                            {{ form_row(form.pays,{'attr': {'class': 'form-control mb-3'}})}}
                            {{ form_row(form.date,{'attr': {'class': 'form-control mb-3'}})}} 
                        {{ form_row(form.role,{'attr': {'class': 'form-control mb-3'}})}} 
                           {{ form_row(form.save,{'attr': {'class': 'main-border-button'}})}}
     
                      {{ form_end(form) }}
