{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div style="background-color:red ">
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>MDP</th>
                <th>Email</th>
                <th>Pays</th>
                <th>Date</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.MDP }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.pays }}</td>
                <td>{{ user.date|date('Y-m-d') }}</td> {# Corrected line #}
                <td>{{ user.role }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">Show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">Edit</a>
                    <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                        <button class="btn" style="background-color:white">Delete</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
</div>
{% endblock %}

