{% block body %}
<div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="page-content">
<div style>
    <h1>Users</h1>
    <div class="row">
    <div class="col-xl-3 col-sm-6 grid-margin stretch-card" >
                <div class="card" >
                  <div class="card-body">
                    <div class="row">
                      <div class="col-9">
                        <div class="d-flex align-items-center align-self-start">
                          <h3 class="mb-0 text-danger">{{ percUser }}%</h3>
                          
                        </div>
                      </div>
