{% extends 'base.html.twig' %}
{% block body %}
<div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="page-content">
    <div style="margin-top: 50px;"> {# Add margin-top to move the form downwards #}
    <center><h1>Login</h1></center>
        <form method="post" action="{{ path("app_login") }}">
                <label for="username">Email</label> 
        <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
        <label for="password">Password</label>
        <input type="password" name="_password" id="password" class="form-control" required> 


        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}
        <input type="hidden" name="_target_path" value="{{ path('profile')}}"/>
        <button class="btn btn-lg btn-primary" type="submit">
            Sign in
        </button>
    </form>

           
                
    </div>
        </div>
            </div>
                </div>
                    </div>
{% endblock %}
