{% extends 'base2.html.twig' %}

{% block title %}Game{% endblock %}

{% block body %}
    <h1>Game</h1>

    <table class="table">
        <tbody>
            <tr>
                <th >Id</th>
                <td style="color: black;">{{ game.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td style="color: black;">{{ game.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td style="color: black;">{{ game.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td style="color: black;">{{ game.date ? game.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td style="color: black;">{{ game.image }}</td>
            </tr>
            <tr>
                <th>Lien</th>
                <td style="color: black;">{{ game.lien }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_game_index') }}">back to list</a>

    <a href="{{ path('app_game_edit', {'id': game.id}) }}">edit</a>

    {{ include('game/_delete_form.html.twig') }}
{% endblock %}
