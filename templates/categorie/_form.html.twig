
{% extends 'base2.html.twig' %}

{% block body %}
<div class="login-form-bg h-100">
        <div class="container h-100">
            <div class="row justify-content-center h-100">
                <div class="col-xl-6">
                    <div class="form-input-content">
                        <div class="card login-form mb-0">
                            <div class="card-body pt-5">
                                {{ form_start(form, {'attr': {'enctype': 'multipart/form-data', 'id': 'votre-formulaire-id'}}) }}
                                    <div class="form-group">
                                        {{ form_row(form.name, {'attr': {'class': 'form-control','data-error-class': 'error-message'}, 'label_attr': {'style': 'color: black'}}) }}
                                        {{ form_row(form.description, {'attr': {'class': 'form-control','data-error-class': 'error-message'}, 'label_attr': {'style': 'color: black'}}) }}
                                    </div>
                                        {{ form_widget(form) }}
                                        <button class="btn">{{ button_label|default('Save') }}</button>
                                {{ form_end(form) }}

                                <p class="mt-5 login-form__footer"><a href="{{ path('app_categorie_index') }}" class="text-primary">Back </a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}