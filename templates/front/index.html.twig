{% extends 'base.html.twig' %}

{% block title %}
    Find all the best games on earth
{% endblock %}

{% block body %}
    <div class="main-banner">
        <div class="row">
            <div class="col-lg-7">
                <div class="header-text">
                    <h6>Welcome To Gami</h6>
                    <h4><em>Browse</em> Our Popular Games Here</h4>
                    <div class="main-button">
                        <a href="#">Browse Now</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <h1 class="text-center mt-5">{{ games|length }} Games</h1>
    <style>
      .gamee img{
        &:hover{
          transform: scale(1.075);
        }
      }
    </style>

    <div class="most-popular">
        <div class="row">
            <div class="col-lg-12">
                <div class="heading-section">
                    <h4><em>Most Popular</em> Right Now</h4>
                </div>
                <div class="row">
                    {% for game in games %}
                        <div class="col-lg-3 col-sm-6">
                            <div class="gamee item">
                                <a href="{{ path('app_front_show', {'id': game.id}) }}">
                                    <img src="{{ asset('uploads/' ~ game.image) }}" alt="Image" width="200" height="200">
                                </a>
                                <h4>{{ game.name }}<br><span>{{ game.categorie.getName() }}</span></h4>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
