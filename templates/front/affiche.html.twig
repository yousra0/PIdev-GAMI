{% extends 'base.html.twig' %}

{% block title game.name %}

{% block body %}
    <article>
        <h1>{{game.name}}</h1>
        <p>{{game.description}}</p>
    </article>
    <iframe src="{{ game.lien }}" frameborder="0" scrolling="yes" width="100%" height="600"></iframe>

    <div class="game-details">
            <div class="row">
              <div class="col-lg-12">
                <h2>{{game.name}}</h2>
              </div>
                    <div class="col-lg-12">
                      <p>{{ game.description }}</p>
                    </div>
                    <div class="col-lg-12">
                      <div class="main-border-button">
                        <a href="#">Enjoy Playing</a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
    <a href="{{ path('app_front') }}">Go Back</a>
{% endblock %}
